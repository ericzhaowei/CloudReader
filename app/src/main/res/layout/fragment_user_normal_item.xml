<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/user_normal_item_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/user_normal_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/user_normal_item_icon"
        app:layout_constraintBottom_toBottomOf="@+id/user_normal_item_icon"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/user_normal_item_icon"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_normal_item_subtitle"
        android:textSize="12sp"
        android:textColor="@color/liteWhite"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/user_normal_item_title"
        app:layout_constraintTop_toTopOf="@+id/user_normal_item_icon"
        app:layout_constraintBottom_toBottomOf="@+id/user_normal_item_icon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arrow"
        android:id="@+id/user_normal_item_right_icon"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>