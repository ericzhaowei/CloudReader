<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/tabholder">
    <ImageView
        android:id="@+id/actionbar_discover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/actionbar_discover"
        android:background="?android:attr/selectableItemBackgroundBorderless"/>

    <ImageView
        android:id="@+id/actionbar_music"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/actionbar_music"
        android:background="?android:attr/selectableItemBackgroundBorderless" />

    <ImageView
        android:id="@+id/actionbar_friends"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/actionbar_friends"
        android:background="?android:attr/selectableItemBackgroundBorderless" />
</LinearLayout>