<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <com.ider.cloudreader.views.CircleHeaderImage
        android:id="@+id/comment_item_user_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/comment_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/comment_item_user_icon"
        app:layout_constraintTop_toTopOf="@+id/comment_item_user_icon"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/comment_item_user_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/comment_item_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/comment_item_user_name" />

    <TextView
        android:id="@+id/comment_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/comment_item_user_name"
        android:layout_marginEnd="16dp"
        android:textSize="14.8sp"
        android:lineSpacingExtra="3dp"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_item_user_icon"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/comment_item_comment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/artical_detail_icon_comment"/>

    <ImageView
        android:id="@+id/comment_item_like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toLeftOf="@+id/comment_item_comment"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/comment_item_comment"
        android:src="@drawable/artical_detail_icon_like"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:srcCompat="@drawable/actionbar_list"
        android:id="@+id/imageView6"
        android:background="@color/blank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/comment_item_content"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/comment_item_content"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>